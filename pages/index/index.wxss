/**index.wxss**/
.page-wrapper {
  padding: 0;
  width: 100%;
  height: 100vh;
  white-space: nowrap;
  box-sizing: border-box;
}

/*设置item*/
.page-wrapper .page-item {
  width: 100%;
  height: 100vh;
  display: inline-block;
  padding: 10px;
  box-sizing: border-box;
}

.page-wrapper .page-full-item {
  padding: 0;
}

.page-box.text-center {
  text-align: center;
}

.scroll-box {
  width: 100vw;
  height: 100vh;
}

.banner {
  position: relative;
}

.banner .banner-shadow {
  width: 100vw;
  height: 50px;
  line-height: 25px;
  position: absolute;
  bottom: 4px;
  background: rgba(255, 255, 255, 0.7);
}

.banner .image {
  width: 100vw;
  height: 60vh;
  background-color: #888888;
  box-shadow: 0 2px 10px #888888;
}

.info-box {
  margin: 10vh auto 0;
}

.user-title {
  font-size: 16px;
}

.user-info {
  font-size: 12px;
}

.info-title {
  background: #f0f0f0;
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  color: #07c160;
}

.left-dom {
  border-left: 3px solid #07c160;
  padding-left: 5px; 
}