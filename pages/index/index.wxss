/**index.wxss**/
.page-body {
  background: #f0f0f0;
  padding: 0;
  width: 100%;
  height: 100vh;
  white-space: nowrap;
  box-sizing: border-box;
}

/*设置item*/
.page-body .item {
  width: 100%;
  height: 100vh;
  display: inline-block;
}

.inner {
  text-align: center;
}

.banner {
  position: relative;
}

.banner .banner-shadow {
  width: 100vw;
  height: 50px;
  line-height: 25px;
  position: absolute;
  bottom: 4px;
  background: rgba(255, 255, 255, 0.7);
}

.banner .image {
  width: 100vw;
  height: 70vh;
  background-color: #888888;
  box-shadow: 0 2px 10px #888888;
}

.info-box {
  margin: 10vh auto 0;
}

.user-title {
  font-size: 16px;
}

.user-info {
  font-size: 12px;
}