/**index.wxss**/
.page-wrapper {
  padding: 0;
  width: 100%;
  height: 100vh;
  white-space: nowrap;
  box-sizing: border-box;
}

/*设置item*/
.page-wrapper .page-item {
  width: 100%;
  height: 100vh;
  display: inline-block;
  padding: 10px;
  box-sizing: border-box;
  background: #f0f0f0;
}

.page-wrapper .page-full-item {
  padding: 0;
}

.page-box.text-center {
  text-align: center;
}

.scroll-box {
  width: 100vw;
  height: 100vh;
}

.bg-box {
  position: relative;
  background: #fff;
}

.bg-box .bg {
  width: 100vw;
  height: 40vh;
  line-height: 25px;
  position: absolute;
  bottom: 4px;
  color: #fff;
}

.bg-box .image {
  width: 100vw;
  height: 40vh;
}

.user-name {
  font-size: 16px;
}

.user-title {
  font-size: 12px;
}

.user-logo {
  margin-top: 30px;
  margin-bottom: 10px;
  width: 100px;
  height: 100px;
  background: #eee;
  border-radius: 100px;
  box-shadow: 0 0 0 5px rgba(255,255,255,0.6);
}

/* 水波纹效果 */
.wave-box {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 30px;
  overflow: hidden;
}

.wave-box .wave {
  position: absolute;
  top: 10px;
  width: 400vw;
  height: 80%;
  opacity: 0.7;
  animation:wave 10s linear infinite -5s;
}

.wave-box .wave-slow {
  top: 8px;
  width: 400vw;
  height: 70%;
  opacity: 0.4;
  animation:wave 15s linear infinite;
}

.wave-box .wave-fast {
  width: 400vw;
  height: 60%;
  top: 12px;
  opacity: 1;
  animation:wave 8s linear infinite -2s;
}

@keyframes wave
{
from {left:0px;}
to {left:-300vw;}
}

.info-box {
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  padding: 10px 40px;
  background: #fff;
  color: #333;
}

.info-title {
  background: #f0f0f0;
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  color: #07c160;
}

.text-left {
  text-align: left;
}

.user-info {
  font-size: 12px;
}

.left-dom {
  border-left: 3px solid #07c160;
  padding-left: 5px; 
}